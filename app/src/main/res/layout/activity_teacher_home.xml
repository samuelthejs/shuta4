<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:theme="@style/ThemeOverlay.MaterialComponents">

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@mipmap/event_home"
        android:gravity="left"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:paddingTop="10dp"
                app:srcCompat="@drawable/ic_home_black_24dp" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="25dp"
                android:layout_weight="1"
                android:fontFamily="serif"
                android:text="Home"
                android:textColor="#ffffff"
                android:textSize="24sp"
                android:textStyle="italic" />

        </LinearLayout>

    </LinearLayout>

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="8dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/linearLayout3"
        app:layout_constraintStart_toEndOf="@+id/linearLayout3"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical|center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_profile"
                    style="@android:style/Widget.Material.Light.Button.Borderless.Colored"
                    android:layout_width="110dp"
                    android:layout_height="150dp"
                    android:layout_marginRight="10dp"
                    android:drawableTop="@drawable/ic_account_circle_black_21dp"
                    android:fontFamily="serif"
                    android:gravity="bottom|center_horizontal"
                    android:paddingTop="40dp"
                    android:text="My Profile"
                    android:textAllCaps="false"
                    android:textColor="#0f0f00"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/btn_staff"
                    style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
                    android:layout_width="110dp"
                    android:layout_height="150dp"
                    android:layout_marginRight="10dp"
                    android:drawableTop="@drawable/ic_perm_contact_calendar_black_24dp"
                    android:fontFamily="serif"
                    android:gravity="bottom|center_horizontal"
                    android:paddingTop="40dp"
                    android:text="Staff"
                    android:textAllCaps="false"
                    android:textColor="#0f0f00"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/btn_class"
                    style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
                    android:layout_width="110dp"
                    android:layout_height="150dp"
                    android:drawableTop="@drawable/ic_class_black_24dp"
                    android:fontFamily="serif"
                    android:gravity="bottom|center_horizontal"
                    android:paddingTop="40dp"
                    android:text="Classes"
                    android:textAllCaps="false"
                    android:textColor="#0f0f00"
                    android:textSize="18sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_subjects"
                    style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
                    android:layout_width="110dp"
                    android:layout_height="150dp"
                    android:layout_marginRight="10dp"
                    android:drawableTop="@drawable/ic_library_books_black_24dp"
                    android:fontFamily="serif"
                    android:gravity="bottom|center_horizontal"
                    android:paddingTop="40dp"
                    android:text="Subjects"
                    android:textAllCaps="false"
                    android:textColor="#0f0f00"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/btn_student"
                    style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
                    android:layout_width="110dp"
                    android:layout_height="150dp"
                    android:layout_marginRight="10dp"
                    android:drawableTop="@drawable/ic_group_black_24dp"
                    android:fontFamily="serif"
                    android:gravity="bottom|center_horizontal"
                    android:paddingTop="40dp"
                    android:text="Students"
                    android:textAllCaps="false"
                    android:textColor="#0f0f00"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/btn_results"
                    style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
                    android:layout_width="110dp"
                    android:layout_height="150dp"
                    android:drawableTop="@drawable/ic_library_books_black_24dp"
                    android:fontFamily="serif"
                    android:gravity="bottom|center_horizontal"
                    android:paddingTop="40dp"
                    android:text="Results"
                    android:textAllCaps="false"
                    android:textColor="#0f0f00"
                    android:textSize="18sp" />

            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>